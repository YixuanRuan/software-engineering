<!--pages/detail/detail.wxml-->
<view class="page">
  <view class="cells_title">基本信息</view>
  <view class="cells_body">
    <view class="cell">
      <image class="cell_img" src="/images/acs/project.png"></image>
      <text class="cell_text">{{project.name}}</text>
    </view>
    <view class="cell">
      <image class="cell_img" src="/images/acs/clock.png"></image>
      <text class="cell_text">{{project.start}}-{{project.end}}</text>
    </view>
  </view>

  <view class="cells_title">发起人</view>
  <view class="cells_body">
    <view class="cell">
      <image class="cell_img" src="/images/detail/person.png"></image>
      <text class="cell_text">{{project.laucherName}}</text>
    </view>
    <view class="cell">
      <image class="cell_img" src="/images/detail/phone.png"></image>
      <text class="cell_text">{{project.laucherPhone}}</text>
    </view>
    <view class="cell">
      <image class="cell_img" src="/images/detail/email.png"></image>
      <text class="cell_text">{{project.laucherEmail}}</text>
    </view>
  </view>

  <view class="cells_title">简介</view>
  <view class="cells_body">
    <view class="cell">
      <text class="texts">{{project.brief}}</text>
    </view>
  </view>

</view>
