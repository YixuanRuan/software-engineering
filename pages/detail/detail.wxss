/* pages/detail/detail.wxss */
.cells_title{
  margin-top:20rpx;
  margin-bottom:15rpx;
  padding-left:20rpx;
  padding-right:30rpx;
  color:#999;
  position: relative;
  font-size:30rpx
}

.cells_title:after{
content:" ";
position:absolute;
left:20rpx;
top:0rpx;
right:20rpx;
height:49rpx;
border-bottom:1rpx solid #d9d9d9;
color:#d9d9d9;
}

.cell{
  display: flex;
  align-items: center;
  justify-content: left;

  padding-left: 60rpx;
  padding-right: 60rpx;
}

.cell_img{
  height: 25rpx;
  max-width: 4%;
  padding-right: 10rpx;
}

.cell_text{
  font-size:35rpx;
}

.texts{
width:100%;
height:300rpx;
overflow: hidden;
text-overflow: ellipsis;
white-space: wrap;/**不换行**/
border:1px solid #ddd;
display: box;
overflow-y:scroll;
}

.texts::-webkit-scrollbar {/*滚动条整体样式*/
        width: 10px;     /*高宽分别对应横竖滚动条的尺寸*/
        height: 1px;
    }
.texts::-webkit-scrollbar-thumb {/*滚动条里面小方块*/
        border-radius: 10px;
         -webkit-box-shadow: inset 0 0 5px rgba(0,0,0,0.2);
        background: #535353;
    }
.texts::-webkit-scrollbar-track {/*滚动条里面轨道*/
        -webkit-box-shadow: inset 0 0 5px rgba(0,0,0,0.2);
        border-radius: 10px;
        background: #EDEDED;
    }



