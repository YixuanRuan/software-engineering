<wux-select id="wux-select1" />
<view class="page">
    <wux-cell-group class="page__hd">
        <wux-cell class="page__title">
          修改个人信息
        </wux-cell>
    </wux-cell-group>
    <view class="page__bd">
        <wux-cell-group title="个人信息">
            <wux-cell hover-class="none">
                <wux-input label="姓名" placeholder="请输入您的真实姓名" />
            </wux-cell>
            <wux-cell hover-class="none">
                <wux-input label="手机号码" placeholder="请输入您的电话号码" />
            </wux-cell>
            <wux-cell hover-class="none">
              <wux-textarea rows="4" label="优势" placeholder="请输入您擅长的领域" />
            </wux-cell>
            <wux-cell hover-class="none">
              <wux-textarea rows="4" label="简介" placeholder="您来自的学校/公司 等" />
            </wux-cell>
        </wux-cell-group>
    </view>
    <navigator hover-class="none" url="../self-info/self-info">
      <wux-button block type="balanced"><wux-icon type="ios-save" size="16" />  保存</wux-button>
    </navigator>
</view>