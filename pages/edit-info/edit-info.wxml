<wux-toast id="wux-toast" />
<wux-select id="wux-select1" />
<view class="page">
    <wux-cell-group class="page__hd">
        <wux-cell class="page__title">
          修改个人信息
        </wux-cell>
    </wux-cell-group>

    <form bindsubmit="formSubmit">
        
          <wux-cell-group title="个人信息">
              <wux-cell hover-class="none">
                  <wux-input name='name' value='{{name}}' label="姓名" controlled bind:change="onChangeName" />
              </wux-cell>
              <wux-cell hover-class="none">
                  <wux-input name='tel' value='{{tel}}' label="手机号码" controlled bind:change="onChangeTel"/>
              </wux-cell>
              <wux-cell hover-class="none">
                  <wux-input name='email' value='{{email}}' label="邮箱" controlled bind:change="onChangeEmail"/>
              </wux-cell>
              <wux-cell hover-class="none">
                <wux-textarea name='advantage' value='{{advantage}}' rows="4" label="优势" controlled bind:change="onChangeAd" />
              </wux-cell>
              <wux-cell hover-class="none">
                <wux-textarea name='introduction' value='{{introduction}}' rows="4" label="简介" controlled bind:change="onChangeIntroduction" />
              </wux-cell>
          </wux-cell-group>
      <!-- <navigator hover-class="none" url="../self-info/self-info"> -->
      <wux-button block type="balanced" bindtap='formSubmit'><wux-icon type="ios-save" size="16" />  保存</wux-button>
    <!-- </navigator> -->
    </form>
</view>