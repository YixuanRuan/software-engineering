<wux-toast id="wux-toast" />
<wux-popup position="right" visible="{{ visible1 }}" bind:close="onClose">
    <wux-cell-group>
      `<view class='notice-title-wrap'>
          <wux-cell hover-class="none" >
            <text class='notice-title' space='emsp'> {{noticeTitle}} </text>
          </wux-cell>
        </view>
        <view class='notice-text-wrap'>
          <wux-cell hover-class="none">
            <text class='notice-text' space='emsp'>  {{noticeContent}} \n\n</text>
            <navigator url="../score/score?taskId={{taskId}}&taskName={{taskName}}">
              <text class='notice-name' space='nbsp'>   {{taskName}} \n\n</text>
            </navigator>
            <text space='emsp'>         通知时间：{{noticeTime}}</text>
          </wux-cell>
        </view>
        <wux-cell hover-class="none">
            <wux-button block type="balanced" bindtap="close">Yes</wux-button>
        </wux-cell>
    </wux-cell-group>
</wux-popup>

<wux-toast id="wux-toast" />
<wux-popup position="right" visible="{{ visible3 }}" bind:close="onClose">
    <wux-cell-group>
      `<view class='notice-title-wrap'>
          <wux-cell hover-class="none" >
            <text class='notice-title' space='emsp'> {{noticeTitle}} </text>
