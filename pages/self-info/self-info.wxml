<wux-popup position="right" visible="{{ visible2 }}" bind:close="onClose">
    <wux-cell-group>
      `<view class='notice-title-wrap'>
          <wux-cell hover-class="none" >
            <text class='notice-title' space='emsp'> {{noticeTitle2}} </text>
          </wux-cell>
        </view>
        <view class='notice-text-wrap'>
          <wux-cell hover-class="none">
            <text class='notice-text' space='emsp'> {{noticeContent2}} \n\n</text>
            <text class='notice-text' space='emsp'> 你可以点击下方用户ID查看信息 \n\n</text>
            <navigator url="../show-info/show-info?userId={{userId}}">
              <text class='notice-name' space='emsp'> {{applyUserName}}</text>
            </navigator>
            <text class='notice-text' space='emsp'>\n\n</text>
            <view class="btn-area-top">
            <button class="weui-btn" size="mini" bindtap="agreeApply">同意</button>
            <button class="weui-btn-delete" size="mini" bindtap="refuseApply">拒绝</button>
            </view>
            <text class='notice-text' space='emsp'>\n</text>
            <text space='emsp'>         通知时间：{{noticeTime2}}</text>
            
            
          </wux-cell>
        </view>
        <wux-cell hover-class="none">
            <wux-button block type="balanced" bindtap="close">Yes</wux-button>
        </wux-cell>
    </wux-cell-group>
</wux-popup>

<view class="container">
  <image src="../../resources/avatar.jpg" class="avatar">
  </image>
  <text class='info-name'>{{userName}}</text>
  <text class='info-email'>{{userEmail}}</text>
  <view class="section">
  <navigator hover-class="none" url="../edit-info/edit-info">
    <view class="item" data-pay="wechat" bindtap="onItemClick">
      <image src="../../resources/person-info.png" class="icon"></image>
        <text  class="pay-text">修改个人信息</text>
    </view>
    </navigator>
    <wux-divider text="通知中心" />
    
    <block wx:for="{{items}}" wx:key="messageId" wx:for-index="idx" wx:for-item="item">
      <project-notice noticeTitle = "{{item.title}}" noticeContent = '{{item.text}}' count='{{count[idx+1]}}' bind:tap="open" data-messageId="{{item.messageId}}" data-notice="{{item}}" data-idx = "{{idx}}"/>
    </block>
    
    <view class='footer'>
      <view class='footer-item'>
        <image src="../../resources/email.png" class="footer-icon"></image>
        <text class="pay-text">联系我们</text>
      </view>
  
    </view>
  </view>
</view>
<movable-button />
